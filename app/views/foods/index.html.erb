<h1>Foods</h1>

<% if @fridge %>
    <h2><%= @fridge.name %></h2>
    <%= link_to "Add food", new_food_path%>
    <% @fridge.location.each do |loc| %>
    <h3><%= loc.name %> | Volume: <%= loc.volume %></h3>
        <% loc.foods.each do |food| %>
            <p><%= food.name %></p>
            <p><%= food.opened %></p>
            <p><%= food.expiry_after_open %></p>
            <p><%= food.expiry %></p>
            <p><%= food.volume %></p>
            <p><%= food.location_id %></p>
        <% end %>
    <% end %>
<% end %>

<%= link_to "Add a Fridge", new_fridge_path %>