<h1>Fridge: <%= @fridge.name %> </h1>
<h5><%= link_to 'Edit', edit_fridge_path %> | <%= link_to "Delete Fridge", fridge_path(@fridge.id), method: :delete, data: { confirm: 'This will delete all locations and food in the fridge. Are you sure?' }  %></h5>

<%= render @fridge.location %>

<h2>Add a fridge location:</h2>
<%= form_with(model: [ @fridge, @fridge.location.build ], local: true) do |form| %>
  <p>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :volume %><br>
    <%= form.number_field :volume %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>